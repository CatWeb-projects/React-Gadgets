{
  "name": "initial-start-projects",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/node": "^14.0.26",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "eslint-config-airbnb": "^18.2.0",
    "estafette": "^1.0.10",
    "estafette-router": "^2.2.1",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.0",
    "mongoose": "^5.11.14",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.7",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.1",
    "typescript": "^3.9.7",
    "vscode-eslint-debug": "^1.9.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lerna:lint:js": "lerna run lint:js:fix",
    "format": "npx prettier --write \"src/**/*.{js,jsx,ts,tsx,json,scss}\"",
    "server": "nodemon src/server/server"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint -c .eslintrc --fix --color"
    ],
    "src/**/*.{js,jsx,scss}": [
      "npx prettier --write -c .prettierrc"
    ]
  }
}
